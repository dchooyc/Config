# Pacman
alias pm="sudo pacman --color auto"
alias vv="pm -S"
alias vvv="vv --noconfirm"
alias xx="pm -U"
alias dl="pm -R"
alias uu="pm -Syyu"
alias uuu="uu --noconfirm"

# Yay
alias yy="yay -S"
alias yyy="yy --noconfirm"

# Package
alias keyring="vv archlinux-keyring"
alias mirrors='sudo reflector \
  --country Singapore,Malaysia,Thailand,"Hong Kong",Australia \
  --age 24 \
  --protocol https \
  --sort rate \
  --number 10 \
  --save /etc/pacman.d/mirrorlist && \
ecblock green "mirrors updated" && \
cat /etc/pacman.d/mirrorlist'
